<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#d7000000">

    <com.example.pan.mobileplayer.activity.view.VideoView
        android:id="@+id/videoview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <include layout="@layout/media_controller" android:id="@+id/media_controller"/>

    <include
        android:id="@+id/ll_buffer" layout="@layout/buffer" />

    <include
        android:id="@+id/ll_loading" layout="@layout/loading" />
</RelativeLayout>